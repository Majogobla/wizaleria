---
import '@fontsource/roboto'

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { ViewTransitions } from "astro:transitions"

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Repositorio con el trabajo realizado por Wizack una agencia de Desarrollo de Software" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	:root {

	}
	
	html {
		font-family: 'Roboto', system-ui, sans-serif;
		background: rgb(50,0,0);
		background: radial-gradient(circle, rgba(50,0,0,1) 0%, rgba(50,0,50,1) 50%, rgba(0,0,50,1) 100%);
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		overscroll-behavior: none;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
